<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.poclayoutnickvanderheijden.MainActivity">

    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="176dp"
            android:layout_weight="1"
            android:background="@android:color/background_dark"
            android:contentDescription="@string/description"
            app:srcCompat="@drawable/balotelli"
            tools:contentDescription="@string/description" />

        <TableLayout
            android:layout_width="391dp"
            android:layout_height="10dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@android:color/black"
            android:orientation="vertical">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="108dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:text="Name"
                    android:textColor="@android:color/background_light"
                    tools:text="Name" />

                <TextView
                    android:layout_width="223dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="0dp"
                    android:text="Mario"
                    android:textColor="@android:color/background_light"
                    tools:text="Mario" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="154dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Gender"
                    android:textColor="@android:color/background_light"
                    tools:text="Gender" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="223dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="0dp"
                    android:text="Male"
                    android:textColor="@android:color/background_light"
                    tools:text="Male" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="158dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Age"
                    android:textColor="@android:color/background_light"
                    tools:text="Age" />

                <TextView
                    android:layout_width="111dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="0dp"
                    android:text="30"
                    android:textColor="@android:color/background_light" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Bounty"
                    android:textColor="@android:color/background_light"
                    tools:text="Bounty" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="111dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="0dp"
                    android:text="9999999"
                    android:textColor="@android:color/background_light"
                    tools:text="9999999" />
            </TableRow>
        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="522dp">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/background_dark"
                android:foregroundTint="@android:color/background_light"
                android:text="Details:"
                android:textColor="@android:color/background_light"
                tools:text="Details:" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="90dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/background_dark"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/background_dark"
                        android:text="Mario Barwuah Balotelli (Palermo, 12 augustus 1990) is een Italiaanse voetballer die bij voorkeur centraal in de aanval speelt. Hij tekende in augustus 2016 een driejarig contract bij OGC Nice, dat hem transfervrij overnam van Liverpool FC. In augustus 2010 debuteerde hij in het Italiaans voetbalelftal."
                        android:textColor="@android:color/background_light"
                        tools:text="Mario Barwuah Balotelli (Palermo, 12 augustus 1990) is een Italiaanse voetballer die bij voorkeur centraal in de aanval speelt. Hij tekende in augustus 2016 een driejarig contract bij OGC Nice, dat hem transfervrij overnam van Liverpool FC. In augustus 2010 debuteerde hij in het Italiaans voetbalelftal." />

                    <Button
                        android:id="@+id/btnReport"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="50dp"
                        android:background="@android:color/darker_gray"
                        android:onClick="Report"
                        android:text="Report"
                        android:textColor="@android:color/background_light" />

                </LinearLayout>

            </ScrollView>

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
